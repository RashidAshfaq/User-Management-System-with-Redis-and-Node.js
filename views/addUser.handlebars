<h1>Add User</h1>

{{#if error}} <span>{{error}}</span> {{/if}}
{{!-- <form class="form-inline" method="POST" action="/user/search">  --}}
<form class="row g-3" method="POST" action="/users/add">

  <div class="col-auto">
    <label>Id: </label>
    <input type="text" name="id" class="form-control" id="userId" placeholder="User ID">
  </div>
  <div class="col-auto">
    <label>FirstName: </label>
    <input type="text" name="firstName" class="form-control" id="firstName" placeholder="First Name here">
  </div>
  <div class="col-auto">
    <label>LastName: </label>
    <input type="text" name="lastName" class="form-control" id="lastName" placeholder="Last Name here">
  </div>
  <div class="col-auto">
    <label>Email: </label>
    <input type="text" name="email" class="form-control" id="email" placeholder="Your email here">
  </div>
  <div class="col-auto">
    <label>Phone: </label>
    <input type="text" name="phone" class="form-control" id="phone" placeholder="Your Phone no here">
  </div>
  <div class="col-auto">
    <input type="submit" class="btn btn-primary mb-3 mt-3" value="Save">
  </div>
</form>